// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Item {
  productId String
  quantity  Int
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
  Cart     Cart?
}

model Product {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       Int
  rating      Float
  stock       Int
  brand       String
  category    String
}

model Cart {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique @db.ObjectId
  items  Item[]
}
